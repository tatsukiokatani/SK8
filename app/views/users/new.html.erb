<div class="users-new-wrapper">
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-md-offset-4 col-md-4 users-new-container">
        <h1 class="text-center text-white">Sign Up</h1>
        <%= form_for @user do |f| %>
          <div class="form-group">
            <% if @user.icon? %>
              <%= icon_tag @user.icon.thumb.url, class: "user-icon" %>
            <% else %>
              <%= icon_tag "default.jpg", alt: "user-icon", size: "200", class: "user-icon" %>
            <% end %>
              <button type="button" class="btn btn-outline-secondary rounded-pill">
                <%= f.file_field :icon, accept: 'image/jpeg,image/gif,image/png', class: "image-select-btn" %>
              </button>
          </div>        
          <div class="form-group">
            <%= f.label :name, class: 'text-white' %>
            <small class="caution">(25文字以下)</small>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :email, class: 'text-white' %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :password, class: 'text-white' %>
            <small class="caution">（ローマ字・数字の混合、8~32文字のみ可能）</small>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, class: 'text-white' %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
          <%= f.submit "登録", class: 'btn-block btn-black' %>
        <% end %>
        <%= link_to 'ログインはこちら', login_path, :style=>"color:gray;", class: 'text-black' %>
      </div>
    </div>
  </div>
</div>
