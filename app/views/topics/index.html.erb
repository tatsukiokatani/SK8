<div class="row">
  <div class="col-md-2">
    <div class="icon">
      <image src="image4.jpeg" class="image">
    </div>
  </div>
</div>
 <%= current_user.name %>



<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %>
      <div class="row justify-content-md-center">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
            <%= topic.user.name %>
            </h2>
            <%= link_to "#" do %>
             <%= image_tag topic.image.url %>
            <% end %>
            <p class="topic-text">
              <%= topic.description %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>